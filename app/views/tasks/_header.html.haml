.main
  .main__header
    .main__header__logo
      = link_to "RUNTEQ", root_path, class: "link"
    .main__header__user
      - if user_signed_in?
        %span{"class"=>"name"} タスク
        %ul.main__header__user__menu
          %li
            = link_to "タスクの一覧", tasks_path, class: "button"
          %li
            = link_to "タスクの作成", new_task_path, class: "button"
      - else
        = link_to "新規登録", new_user_registration_path, class: "regist"
        = link_to "ログイン", new_user_session_path, class: "regist"
      .main__header__user__icon
      .main__header__user__noimage
        no image
  
